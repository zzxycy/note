@import '../../style/weui.wxss';

.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.haibao {
  width: 100%;
  height: 35%;
}

.imageBener {
  width: 100%;
  height: 100%;
}

.liststyle{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 10px;
  padding: 10px;
  font-size: 16px;
  border-bottom: 3px solid #f5f5f5;
}


.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.listtopimage{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime{
  position: absolute;
  right: 10px;
  text-align: right;
  color: #9F9F9F;
  font-size: 14px;
}

.title{
  font-size: 16px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.chapterName{
  font-size: 12px;
  color: #1B82D1;
  margin-top: 5px;
}

.collect{
  width: 20px;
  height: 20px;
  padding: 10px;
  position: absolute;
  right: 0px;
}
